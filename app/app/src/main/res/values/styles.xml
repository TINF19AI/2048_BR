<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NormalText" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="HeadlineText" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <!-- ToDo: Add Colors for text and buttons -->
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <!-- ToDo: Add Colors for text and buttons -->
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="ButtonBase">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">100dp</item>
    </style>

    <style name="ButtonPrimary" parent="ButtonBase">
        <item name="android:textColor">?attr/brTileText2048</item>
        <item name="android:backgroundTint">?attr/brTile2048</item>
    </style>

    <style name="ButtonSecondary" parent="ButtonBase">
        <item name="android:textColor">?attr/brTileText2</item>
        <item name="android:backgroundTint">?attr/brTile2</item>
    </style>
</resources>