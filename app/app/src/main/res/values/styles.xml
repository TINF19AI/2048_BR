<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextRegular" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/nunito</item>
        <item name="fontFamily">@font/nunito</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextHeadline" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/nunito</item>
        <item name="fontFamily">@font/nunito</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25sp</item>
        <item name="android:colorBackground">?attr/brTile2</item>
        <item name="android:textColor">?attr/brTileText2</item>
    </style>

    <style name="ButtonBase">
        <item name="android:letterSpacing">0.04</item>
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">100dp</item>
    </style>

    <style name="ButtonPrimary" parent="ButtonBase">
        <item name="android:textColor">?attr/brTileText2048</item>
        <item name="android:backgroundTint">?attr/brTile2048</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ButtonSecondary" parent="ButtonBase">
        <item name="android:textColor">?attr/brTileText2</item>
        <item name="android:backgroundTint">?attr/brTile2</item>
    </style>

    <style name="topAppBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="titleCentered">true</item>
        <item name="android:background">@color/md_grey_900</item>
        <item name="titleTextColor">@color/white</item>
        <item name="android:elevation">200dp</item>
        <item name="android:outlineProvider">bounds</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="CardRegular">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:backgroundTint">?attr/brBackground</item>
        <item name="cardCornerRadius">25dp</item>
        <item name="layout_constraintWidth_percent">0.9</item>

    </style>

    <style name="AlertDialogRegular" parent="@style/MaterialAlertDialog.Material3">
        <item name="colorOnSurface">@color/white</item>
        <item name="android:background">@color/md_grey_900</item>
        <item name="android:fontFamily">@font/nunito</item>

        <!-- Title -->
        <item name="materialAlertDialogTitleTextStyle">
            @style/MyTitle_MaterialAlertDialog.MaterialComponents.Title.Text
        </item>

        <!-- Body -->
        <item name="materialAlertDialogBodyTextStyle">
            @style/BodyTextAppearance.MaterialComponents.Body2
        </item>

        <item name="materialAlertDialogTheme">@style/BodyTextAppearance.MaterialComponents.Body2
        </item>


        <!-- Buttons -->
        <!--        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>-->
        <!--        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>-->
        <!--        <item name="buttonBarNeutralButtonStyle">....</item>-->

    </style>

    <style name="MyTitle_MaterialAlertDialog.MaterialComponents.Title.Text" parent="@style/MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <!--        <item name="android:textAppearance">@style/MyTitle_TextAppearance.MaterialComponents.Subtitle1</item>-->
    </style>

    <style name="BodyTextAppearance.MaterialComponents.Body2" parent="@style/TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="fontFamily">@font/nunito</item>
    </style>

</resources>