<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.br2048" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="brTile2">@color/origTile2</item>
        <item name="brTileText2">@color/md_red_500</item>
        <item name="brTile4">@color/origTile4</item>
        <item name="brTileText4">@color/md_blue_500</item>
        <item name="brTile8">@color/origTile8</item>
        <item name="brTile16">@color/origTile16</item>
        <item name="brTile32">@color/origTile32</item>
        <item name="brTile64">@color/origTile64</item>
        <item name="brTile128">@color/origTile128</item>
        <item name="brTile256">@color/origTile256</item>
        <item name="brTile512">@color/origTile512</item>
        <item name="brTile1024">@color/origTile1024</item>
        <item name="brTile2048">@color/origTile2048</item>
        <item name="brTileText">@color/md_black_1000</item>
        <item name="brEmpty">@color/origEmpty</item>
        <item name="brBackground">@color/origBackground</item>
    </style>

    <style name="Theme.Original" parent="@style/Theme.br2048">
    </style>

    <style name="Theme.Pink" parent="@style/Theme.br2048">
        <item name="brTile2">@color/md_pink_200</item>
        <item name="brTile4">@color/md_pink_300</item>
        <item name="brTileText2048">@color/white</item>
        <item name="brTile2048">@color/md_pink_900</item>
        <item name="brBackground">@color/md_grey_200</item>
    </style>

</resources>